{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "swift-build",
            "type": "shell",
            "command": "swiftc",
            "args": [
                "${file}", // This tells it to compile the currently open file
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}" // The output executable name
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}